<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:src="@drawable/ic_music_background"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/tvSongName"
        android:textSize="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_32dp"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgPlay"
        android:src="@drawable/ic_play_arrow"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSongName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:layout_marginRight="@dimen/margin_16dp"
        android:src="@drawable/ic_skip_previous"
        app:layout_constraintEnd_toStartOf="@+id/imgPlay"
        app:layout_constraintBottom_toBottomOf="@+id/imgPlay"
        app:layout_constraintTop_toTopOf="@+id/imgPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintStart_toEndOf="@+id/imgPlay"
        app:layout_constraintBottom_toBottomOf="@+id/imgPlay"
        app:layout_constraintTop_toTopOf="@+id/imgPlay"
        android:src="@drawable/ic_skip_next"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginTop="@dimen/margin_40dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPlay"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/tvTimeStart"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_marginRight="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeStart"
        app:layout_constraintTop_toTopOf="@+id/tvTimeStart"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>