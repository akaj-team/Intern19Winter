<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        app:layout_constraintGuide_percent="0.96"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:src="@drawable/img_avatar"
        android:layout_marginTop="@dimen/margin_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <TextView
        android:id="@+id/tvNickName"
        android:text="@string/textView_text_sayabaa"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/padding_16dp"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgFood"
        android:src="@drawable/img_food_1"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_360dp"/>
    <ImageView
        android:id="@+id/imgLike"
        android:src="@drawable/ic_favorite_border"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/imgFood"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />
    <ImageView
        android:id="@+id/imgComment"
        android:src="@drawable/ic_chat_bubble"
        android:layout_marginLeft="@dimen/margin_8dp"
        app:layout_constraintTop_toTopOf="@+id/imgLike"
        app:layout_constraintStart_toEndOf="@id/imgLike"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
    <ImageView
        android:src="@drawable/ic_share"
        android:layout_marginLeft="@dimen/margin_8dp"
        app:layout_constraintTop_toTopOf="@+id/imgComment"
        app:layout_constraintStart_toEndOf="@+id/imgComment"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <View
        android:id="@+id/tvRow"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintStart_toStartOf="@+id/imgLike"
        android:background="#4A686869"
        app:layout_constraintTop_toBottomOf="@+id/imgComment"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imgCountLike"
        android:layout_marginTop="@dimen/margin_8dp"
        android:src="@drawable/ic_favorite_black"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        app:layout_constraintTop_toBottomOf="@+id/tvRow"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"/>
    <TextView
        app:layout_constraintTop_toTopOf="@+id/imgCountLike"
        android:id="@+id/tvCountLike"
        android:padding="0dp"
        android:textSize="@dimen/text_size_20dp"
        android:text="@string/textview_text_0"
        android:layout_marginLeft="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@id/imgCountLike"
        app:layout_constraintStart_toEndOf="@+id/imgCountLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="@+id/imgCountLike"
        android:text="@string/textview_text_like"
        app:layout_constraintTop_toBottomOf="@+id/imgCountLike"
        android:textSize="@dimen/text_size_20dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        app:layout_constraintStart_toEndOf="@+id/tvCountLike"
        app:layout_constraintTop_toTopOf="@+id/imgCountLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvUserNameComment"
        android:textStyle="bold"
        android:text="@string/textView_text_sayabaa"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCountLike"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/textview_text_comment"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserNameComment"
        app:layout_constraintStart_toStartOf="@+id/glStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#4A686869"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>
