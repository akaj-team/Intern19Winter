<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTodoName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:text="todoName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgEditTodo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:src="@drawable/ic_edit_black"
        app:layout_constraintBottom_toBottomOf="@+id/tvTodoName"
        app:layout_constraintStart_toEndOf="@+id/tvTodoName"
        app:layout_constraintTop_toTopOf="@+id/tvTodoName" />

    <ImageView
        android:src="@drawable/ic_delete_forever_black"
        android:layout_marginLeft="@dimen/margin_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgEditTodo"
        app:layout_constraintTop_toTopOf="@+id/imgEditTodo"
        app:layout_constraintStart_toEndOf="@+id/imgEditTodo"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>