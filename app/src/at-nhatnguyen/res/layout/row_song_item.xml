<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imgPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/imgPlay"
        app:layout_constraintTop_toTopOf="@+id/imgPlay"
        app:layout_constraintStart_toEndOf="@+id/imgPlay"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/textview_songname"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvArtist"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        android:layout_marginLeft="8dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/textView_artist" />

    <TextView
        android:id="@+id/tvDuration"
        app:layout_constraintBottom_toBottomOf="@+id/tvArtist"
        app:layout_constraintTop_toTopOf="@id/tvArtist"
        app:layout_constraintStart_toEndOf="@+id/tvArtist"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:gravity="left"
        android:text="@string/textview_0_00" />
</androidx.constraintlayout.widget.ConstraintLayout>
