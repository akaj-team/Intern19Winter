<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTodoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/textview_text_todo_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTodoName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tvTodoName"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,UnusedAttribute" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/textview_text_content"
        app:layout_constraintStart_toStartOf="@+id/tvTodoName"
        app:layout_constraintTop_toBottomOf="@+id/tvTodoName" />

    <EditText
        android:id="@+id/edtContent"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:autofillHints=""
        android:background="@drawable/border_edit_text"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/edtTodoName"
        app:layout_constraintTop_toTopOf="@+id/tvContent"
        tools:ignore="LabelFor,UnusedAttribute" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:text="@string/button_text_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
