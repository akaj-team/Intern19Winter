<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <asiantech.internship.summer.viewpagertablayout.NonSwipableViewPager
        android:id="@+id/viewPagerStep"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_28"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgFirstDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enable_position_icon"
            android:layout_marginStart="@dimen/dp_8" />

        <ImageView
            android:id="@+id/imgSecondDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/disable_position_icon"
            android:layout_marginStart="@dimen/dp_8" />

        <ImageView
            android:id="@+id/imgThirdDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/disable_position_icon"
            android:layout_marginStart="@dimen/dp_8" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_28" />
</androidx.constraintlayout.widget.ConstraintLayout>
