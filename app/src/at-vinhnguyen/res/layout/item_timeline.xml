<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_12">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilePicture"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:src="@drawable/profile_image"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintStart_toEndOf="@id/imgProfilePicture"
        app:layout_constraintTop_toTopOf="@id/imgProfilePicture"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfilePicture" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_more_horiz_black_24dp"
        app:layout_constraintTop_toTopOf="@id/tvNameTop"
        app:layout_constraintTop_toBottomOf="@id/tvNameTop"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_12" />

    <ImageView
        android:id="@+id/imgContent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic8"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/imgProfilePicture" />

    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/imgContent"
        app:layout_constraintStart_toStartOf="@id/imgProfilePicture"
        android:layout_marginTop="@dimen/dp_12" />

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@id/imgLike"
        app:layout_constraintStart_toStartOf="@id/imgLike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:text="@string/likes"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/tvLikeCount"
        app:layout_constraintStart_toEndOf="@id/tvLikeCount" />

    <TextView
        android:id="@+id/tvNameBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvLikeCount"
        app:layout_constraintStart_toStartOf="@id/tvLikeCount" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/tvNameBottom"
        app:layout_constraintTop_toBottomOf="@id/tvNameBottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
