<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context="asiantech.internship.winter.musicplayer.MusicActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_56dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_list_song" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/activity_music_scene"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="contentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_bar_height_210dp"
            android:background="@drawable/bg_action_player"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerEnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_bar_56dp"
            android:background="@color/colorDarkLight"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/view_width_32dp"
            android:layout_height="@dimen/view_height_2dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:alpha="1"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSongArtCurrent"
            android:layout_width="@dimen/img_song_art_80dp"
            android:layout_height="@dimen/img_song_art_80dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container" />

        <ImageButton
            android:id="@+id/imgBtnDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:src="@drawable/ic_arrow_down"
            android:tint="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/container"
            app:layout_constraintTop_toTopOf="@id/container" />

        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toTopOf="@id/tvArtist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgSongArtCurrent"
            app:layout_constraintTop_toTopOf="@id/imgSongArtCurrent"
            tools:text="Song name" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintBottom_toBottomOf="@id/imgSongArtCurrent"
            app:layout_constraintStart_toStartOf="@id/tvSongTitle"
            app:layout_constraintTop_toBottomOf="@id/tvSongTitle" />

        <ImageButton
            android:id="@+id/imgBtnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@drawable/ripple_btn"
            android:src="@drawable/ic_more"
            android:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvArtist"
            app:layout_constraintStart_toEndOf="@id/container"
            app:layout_constraintTop_toTopOf="@id/tvSongTitle" />

        <TextView
            android:id="@+id/tvDurationLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/imgSongArtCurrent"
            tools:text="1:22" />

        <TextView
            android:id="@+id/tvMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="@string/textview_minus"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toStartOf="@id/tvDurationRight"
            app:layout_constraintTop_toBottomOf="@id/imgSongArtCurrent" />

        <TextView
            android:id="@+id/tvDurationRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/imgSongArtCurrent"
            tools:text="1:22" />

        <ToggleButton
            android:id="@+id/tbShuffle"
            android:layout_width="@dimen/btn_24dp"
            android:layout_height="@dimen/btn_24dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_shuffle"
            android:contentDescription="@string/app_name"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toTopOf="@id/tvDurationRight"
            app:layout_constraintEnd_toEndOf="@id/container" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/tvDurationLeft" />

        <ImageButton
            android:id="@+id/imgBtnPrevious"
            android:layout_width="@dimen/btn_48dp"
            android:layout_height="@dimen/btn_48dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:background="@drawable/ripple_btn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_media_prev"
            app:layout_constraintBottom_toBottomOf="@id/container"
            app:layout_constraintEnd_toStartOf="@id/imgBtnPlay"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />

        <ImageButton
            android:id="@+id/imgBtnPlay"
            android:layout_width="@dimen/btn_48dp"
            android:layout_height="@dimen/btn_48dp"
            android:background="@drawable/ripple_btn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_media_play"
            app:layout_constraintBottom_toBottomOf="@id/imgBtnPrevious"
            app:layout_constraintEnd_toStartOf="@id/imgBtnNext"
            app:layout_constraintStart_toEndOf="@id/imgBtnPrevious"
            app:layout_constraintTop_toTopOf="@id/imgBtnPrevious" />

        <ImageButton
            android:id="@+id/imgBtnNext"
            android:layout_width="@dimen/btn_48dp"
            android:layout_height="@dimen/btn_48dp"
            android:background="@drawable/ripple_btn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_media_next"
            app:layout_constraintBottom_toBottomOf="@id/imgBtnPrevious"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintStart_toEndOf="@id/imgBtnPlay"
            app:layout_constraintTop_toTopOf="@id/imgBtnPrevious" />


    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
