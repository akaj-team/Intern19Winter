<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3c3f41">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/img_song_art_48dp"
        android:layout_height="@dimen/img_song_art_48dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:cardCornerRadius="@dimen/card_corner_radius_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgSongArtCurrent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toTopOf="@id/tvArtist"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnPrevious"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        tools:text="Song name" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toStartOf="@id/imgBtnPrevious"
        app:layout_constraintStart_toStartOf="@id/tvSongTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
        tools:text="Artist" />

    <ImageButton
        android:id="@+id/imgBtnPrevious"
        android:layout_width="@dimen/img_btn_20dp"
        android:layout_height="@dimen/img_btn_20dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_media_prev"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toStartOf="@id/imgBtnPlay"
        app:layout_constraintStart_toEndOf="@id/tvSongTitle"
        app:layout_constraintTop_toTopOf="@id/cardView" />

    <ImageButton
        android:id="@+id/imgBtnPlay"
        android:layout_width="@dimen/img_btn_24dp"
        android:layout_height="@dimen/img_btn_24dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_media_play"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/imgBtnPrevious"
        app:layout_constraintEnd_toStartOf="@id/imgBtnNext"
        app:layout_constraintStart_toEndOf="@id/imgBtnPrevious"
        app:layout_constraintTop_toTopOf="@id/imgBtnPrevious" />

    <ImageButton
        android:id="@+id/imgBtnNext"
        android:layout_width="@dimen/img_btn_20dp"
        android:layout_height="@dimen/img_btn_20dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_media_next"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/imgBtnPrevious"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBtnPlay"
        app:layout_constraintTop_toTopOf="@id/imgBtnPrevious" />
</androidx.constraintlayout.widget.ConstraintLayout>
