<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_280dp"
    android:background="@drawable/img_nen"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/width_100dp"
        android:layout_height="@dimen/height_100dp"
        android:layout_margin="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:src="@drawable/img_chibi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_text_user_email_com"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_20sp" />
</LinearLayout>
