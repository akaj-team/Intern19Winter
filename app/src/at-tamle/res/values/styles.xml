<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H3BlackLeft">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ParagraphLeftTextGray">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ParagraphLeftTextSubtle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Lead">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ParagraphCenterTextSubtle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextButtonCenter" tools:ignore="DuplicateDefinition">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="H5">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>

    <style name="TextViewAttribute">
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/colorBack</item>
    </style>

    <style name="EditTextStyleNunito">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>
    <style name="TimelineNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
